# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/adaptive_elearning
MONGODB_URI_TEST=mongodb://localhost:27017/adaptive_elearning_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Password Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# xAPI Configuration
XAPI_ENDPOINT=http://localhost:8080/xapi/
XAPI_USERNAME=your-lrs-username
XAPI_PASSWORD=your-lrs-password
XAPI_VERSION=1.0.3

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Security
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development
NODEMON_WATCH=src
NODEMON_EXT=ts,json 